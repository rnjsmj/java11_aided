package org.kh.java;

//형변환1 (Auto Casting, Force Casting) = type conversion
public class Casting1 {

	public static void main(String[] args) {
		//Auto Casting
		//작은 크기의 저장소에 있는 데이터의 값을 큰 크기의 저장소로 옮기면서 형변환
		byte b = 20;   	//1byte
		short s = b;	//2
		int i = s;		//3
		long l = i;		//4
		
		//
		//int i2 = l; //불가능
		int i2 = (int)l;
	}

}
